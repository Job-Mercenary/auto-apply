{
  "name": "Job Mercenary: auto apply",
  "version": "1.0.1",
  "manifest_version": 3,

  "description": "Streamline your job hunt with Job Mercenaryâ€”an efficient extension that automates repetitive application tasks",

  "permissions": ["storage", "tabs", "activeTab"],

  "host_permissions": ["https://*.internshala.com/*"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],

  "action": {
    "default_popup": "index.html",
    "default_title": "Job Mercenary"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "jobmercenary@example.com",
      "strict_min_version": "89.0",
      "manifest_version": 2
    }
  }
}
