{
  "name": "Job Mercenary: auto apply",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Streamline your job hunt with Job Mercenaryâ€”an efficient extension that automates repetitive application tasks",
  "host_permissions": ["https://*.internshala.com/*"],
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_title": "Makes applying faster",
    "default_popup": "index.html"
  }
}
